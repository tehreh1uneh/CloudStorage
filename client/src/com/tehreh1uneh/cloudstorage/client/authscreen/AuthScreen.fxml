<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
          fx:controller="com.tehreh1uneh.cloudstorage.client.authscreen.AuthScreen">

    <columnConstraints>
        <ColumnConstraints percentWidth="10"/>
        <ColumnConstraints percentWidth="18.0"/>
        <ColumnConstraints percentWidth="60"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="3"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>

    <Label text="Логин " GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3">
        <font>
            <Font name="Monaco Plain:001.001" size="10.0"/>
        </font>
    </Label>
    <TextField fx:id="login" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="3">
        <font>
            <Font name="Monaco Plain:001.001" size="10.0"/>
        </font>
    </TextField>

    <Label text="Пароль " GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4">
        <font>
            <Font name="Monaco Plain:001.001" size="10.0"/>
        </font>
    </Label>
    <PasswordField fx:id="password" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="4"/>

    <Button defaultButton="true" onMouseClicked="#mouseClickedAuth" text="Войти" textAlignment="CENTER"
            GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP">
        <font>
            <Font name="Monaco Plain:001.001" size="11.0"/>
        </font>
    </Button>

</GridPane>
