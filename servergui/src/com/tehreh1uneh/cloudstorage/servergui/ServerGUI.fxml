<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="com.tehreh1uneh.cloudstorage.servergui.ServerGUI">
    <top>
        <GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121">

            <columnConstraints>
                <ColumnConstraints halignment="LEFT" percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints halignment="RIGHT" percentWidth="25"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>

            <Button onMouseClicked="#onClickStartServer" text="Start server" GridPane.columnIndex="0">
                <font>
                    <Font name="Monaco Plain:001.001" size="8.0"/>
                </font>
            </Button>

            <Button onMouseClicked="#onClickStopServer" text="Stop server" GridPane.columnIndex="3">
                <font>
                    <Font name="Monaco Plain:001.001" size="8.0"/>
                </font>
            </Button>


        </GridPane>
    </top>

    <center>
        <TextArea fx:id="logArea" editable="false">
            <font>
                <Font name="Monaco Plain:001.001" size="8.0"/>
            </font>

        </TextArea>
    </center>

    <bottom>
        <GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" percentWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>

            <Hyperlink fx:id="sourceCodeLink" onMouseClicked="#openSourceCodeLink" text="Source code"
                       GridPane.columnIndex="0">
                <font>
                    <Font name="Monaco Plain:001.001" size="8.0"/>
                </font>
            </Hyperlink>

        </GridPane>

    </bottom>
</BorderPane>
